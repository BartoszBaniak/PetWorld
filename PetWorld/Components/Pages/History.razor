@page "/history"
@using PetWorld.Application.Interfaces
@using PetWorld.Application.DTOs
@inject IChatHistoryService ChatHistoryService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Historia - PetWorld</PageTitle>

<div class="history-page">
    <div class="history-header">
        <h2>Historia rozm√≥w</h2>
        <p>PrzeglƒÖdaj poprzednie konwersacje z asystentem AI</p>
    </div>

    <div class="history-content">
        @if (isLoading)
        {
            <div class="loading-state">
                <div class="loading-spinner"></div>
                <p>≈Åadowanie historii...</p>
            </div>
        }
        else if (!chatHistories.Any())
        {
            <div class="empty-state">
                <div class="empty-icon">üí¨</div>
                <h3>Brak historii rozm√≥w</h3>
                <p>Rozpocznij swojƒÖ pierwszƒÖ rozmowƒô z asystentem AI</p>
                <button class="start-chat-btn" @onclick="GoToChat">
                    Rozpocznij czat
                </button>
            </div>
        }
        else
        {
            <div class="history-list">
                @foreach (var history in chatHistories)
                {
                    <div class="history-card" @onclick="() => ExpandCard(history.Id)">
                        <div class="card-header">
                            <div class="card-meta">
                                <span class="card-date">üìÖ @history.Timestamp.ToString("dd MMM yyyy, HH:mm")</span>
                                <span class="iteration-badge iteration-@history.IterationCount">
                                    üîÑ @history.IterationCount iteracji
                                </span>
                            </div>
                        </div>

                        <div class="card-question">
                            <span class="label">Pytanie:</span>
                            <p>@history.Question</p>
                        </div>

                        @if (expandedCardId == history.Id)
                        {
                            <div class="card-answer expanded">
                                <span class="label">Odpowied≈∫:</span>
                                <p>@history.Answer</p>

                                @if (!string.IsNullOrEmpty(history.RecommendedProducts))
                                {
                                    <div class="products-section">
                                        <span class="label">Polecane produkty:</span>
                                        <div class="product-tags">
                                            @foreach (var product in history.RecommendedProducts.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                            {
                                                <span class="product-tag">@product.Trim()</span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="card-answer preview">
                                <span class="label">Odpowied≈∫:</span>
                                <p class="truncate">@TruncateText(history.Answer, 150)</p>
                                <span class="expand-hint">Kliknij, aby rozwinƒÖƒá</span>
                            </div>
                        }
                    </div>
                }
            </div>

            <div class="history-stats">
                <div class="stat-item">
                    <span class="stat-value">@chatHistories.Count</span>
                    <span class="stat-label">Rozm√≥w</span>
                </div>
                <div class="stat-item">
                    <span class="stat-value">@chatHistories.Average(h => h.IterationCount).ToString("F1")</span>
                    <span class="stat-label">≈ör. iteracji</span>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="error-message">
                <span>‚ö†Ô∏è @errorMessage</span>
            </div>
        }
    </div>
</div>

@code {
    private List<ChatHistoryDto> chatHistories = new();
    private bool isLoading = true;
    private string errorMessage = string.Empty;
    private int? expandedCardId = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadHistory();
    }

    private async Task LoadHistory()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            var histories = await ChatHistoryService.GetAllHistoryAsync();
            chatHistories = histories.OrderByDescending(h => h.Timestamp).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"B≈ÇƒÖd podczas ≈Çadowania historii: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ExpandCard(int id)
    {
        expandedCardId = expandedCardId == id ? null : id;
    }

    private void GoToChat()
    {
        NavigationManager.NavigateTo("/chat");
    }

    private string TruncateText(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text) || text.Length <= maxLength)
            return text;
        return text.Substring(0, maxLength) + "...";
    }
}

