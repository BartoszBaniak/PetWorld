@page "/chat"
@page "/"
@using PetWorld.Application.Interfaces
@using PetWorld.Application.DTOs
@inject IWriterCriticService WriterCriticService
@inject IChatHistoryService ChatHistoryService
@rendermode InteractiveServer

<PageTitle>Czat - PetWorld</PageTitle>

<div class="chat-page">
    <div class="chat-header">
        <div class="chat-header-avatar">
            <span>ü§ñ</span>
        </div>
        <div class="chat-header-info">
            <h4>PetWorld AI Assistant</h4>
            <span class="status">@(isProcessing ? "Pisze..." : "Online")</span>
        </div>
    </div>

    <div class="chat-messages" @ref="chatMessagesDiv">
        @if (!messages.Any())
        {
            <div class="welcome-message">
                <div class="welcome-icon">üêæ</div>
                <h3>Witaj w PetWorld!</h3>
                <p>Jestem Twoim asystentem AI. Pomogƒô Ci znale≈∫ƒá idealne produkty dla Twojego pupila.</p>
                <div class="suggestions">
                    <button class="suggestion-chip" @onclick='() => SendSuggestion("Jaka karma dla doros≈Çego psa?")'>
                        üêï Karma dla psa
                    </button>
                    <button class="suggestion-chip" @onclick='() => SendSuggestion("Potrzebujƒô zabawki dla kota")'>
                        üêà Zabawki dla kota
                    </button>
                    <button class="suggestion-chip" @onclick='() => SendSuggestion("Akcesoria do akwarium")'>
                        üê† Akwarystyka
                    </button>
                </div>
            </div>
        }

        @foreach (var msg in messages)
        {
            <div class="message-wrapper @(msg.IsUser ? "user" : "assistant")">
                @if (!msg.IsUser)
                {
                    <div class="message-avatar">ü§ñ</div>
                }
                <div class="message-bubble @(msg.IsUser ? "user-bubble" : "assistant-bubble")">
                    <div class="message-content">@((MarkupString)FormatMessage(msg.Content))</div>
                    @if (msg.IterationCount > 0)
                    {
                        <div class="message-meta">
                            <span class="iteration-badge" title="Liczba iteracji Writer-Critic">
                                üîÑ @msg.IterationCount iteracji
                            </span>
                        </div>
                    }
                    @if (msg.Products.Any())
                    {
                        <div class="products-section">
                            <div class="products-label">Polecane produkty:</div>
                            <div class="products-list">
                                @foreach (var product in msg.Products)
                                {
                                    <span class="product-tag">@product</span>
                                }
                            </div>
                        </div>
                    }
                </div>
                @if (msg.IsUser)
                {
                    <div class="message-avatar user-avatar">üë§</div>
                }
            </div>
        }

        @if (isProcessing)
        {
            <div class="message-wrapper assistant">
                <div class="message-avatar">ü§ñ</div>
                <div class="message-bubble assistant-bubble typing">
                    <div class="typing-indicator">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="chat-input-area">
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="error-toast">
                <span>‚ö†Ô∏è @errorMessage</span>
                <button @onclick="() => errorMessage = string.Empty">√ó</button>
            </div>
        }
        <div class="input-container">
            <textarea
                @bind="currentQuestion"
                @bind:event="oninput"
                @onkeydown="HandleKeyDown"
                placeholder="Napisz wiadomo≈õƒá..."
                rows="1"
                disabled="@isProcessing"></textarea>
            <button class="send-button" @onclick="SendQuestion" disabled="@(isProcessing || string.IsNullOrWhiteSpace(currentQuestion))">
                @if (isProcessing)
                {
                    <span class="spinner"></span>
                }
                else
                {
                    <span>‚û§</span>
                }
            </button>
        </div>
    </div>
</div>

@code {
    private ElementReference chatMessagesDiv;
    private string currentQuestion = string.Empty;
    private bool isProcessing = false;
    private string errorMessage = string.Empty;
    private List<ChatMessage> messages = new();

    private class ChatMessage
    {
        public string Content { get; set; } = string.Empty;
        public bool IsUser { get; set; }
        public int IterationCount { get; set; }
        public List<string> Products { get; set; } = new();
        public DateTime Timestamp { get; set; } = DateTime.Now;
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            await SendQuestion();
        }
    }

    private async Task SendSuggestion(string suggestion)
    {
        currentQuestion = suggestion;
        await SendQuestion();
    }

    private async Task SendQuestion()
    {
        if (string.IsNullOrWhiteSpace(currentQuestion) || isProcessing)
            return;

        var question = currentQuestion.Trim();
        currentQuestion = string.Empty;

        messages.Add(new ChatMessage
        {
            Content = question,
            IsUser = true
        });

        isProcessing = true;
        errorMessage = string.Empty;
        StateHasChanged();

        try
        {
            var response = await WriterCriticService.ProcessQuestionAsync(question);

            messages.Add(new ChatMessage
            {
                Content = response.FinalAnswer,
                IsUser = false,
                IterationCount = response.IterationCount,
                Products = response.RecommendedProducts
            });

            // Save to history
            var chatHistoryDto = new ChatHistoryDto
            {
                Timestamp = DateTime.UtcNow,
                Question = question,
                Answer = response.FinalAnswer,
                IterationCount = response.IterationCount,
                RecommendedProducts = string.Join(", ", response.RecommendedProducts)
            };

            await ChatHistoryService.SaveChatHistoryAsync(chatHistoryDto);
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private string FormatMessage(string content)
    {
        if (string.IsNullOrEmpty(content))
            return content;

        return System.Web.HttpUtility.HtmlEncode(content)
            .Replace("\n", "<br>")
            .Replace("POLECANE PRODUKTY:", "<strong>Polecane produkty:</strong>");
    }
}

