@page "/history"
@using PetWorld.Application.Interfaces
@using PetWorld.Application.DTOs
@inject IChatHistoryService ChatHistoryService
@rendermode InteractiveServer

<PageTitle>Historia Czatów - PetWorld</PageTitle>

<h3>Historia Czatów</h3>

<div class="history-container">
    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Ładowanie...</span>
            </div>
        </div>
    }
    else if (chatHistories.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Data</th>
                        <th>Pytanie</th>
                        <th>Odpowiedź</th>
                        <th>Liczba iteracji</th>
                        <th>Polecane produkty</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var history in chatHistories)
                    {
                        <tr>
                            <td>@history.Data.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <div class="text-truncate" style="max-width: 250px;" title="@history.Pytanie">
                                    @history.Pytanie
                                </div>
                            </td>
                            <td>
                                <div class="text-truncate" style="max-width: 350px;" title="@history.Odpowiedz">
                                    @history.Odpowiedz
                                </div>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-@GetIterationBadgeColor(history.LiczbaIteracji)">
                                    @history.LiczbaIteracji
                                </span>
                            </td>
                            <td>
                                <div class="text-truncate" style="max-width: 200px;" title="@history.RecommendedProducts">
                                    @history.RecommendedProducts
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <p class="text-muted">Łącznie: @chatHistories.Count rekordów</p>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            Brak historii czatów. Rozpocznij rozmowę na stronie <a href="/chat" class="alert-link">Czat</a>.
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger mt-3" role="alert">
            @errorMessage
        </div>
    }
</div>

@code {
    private List<ChatHistoryDto> chatHistories = new();
    private bool isLoading = true;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadHistory();
    }

    private async Task LoadHistory()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            var histories = await ChatHistoryService.GetAllHistoryAsync();
            chatHistories = histories.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Błąd podczas ładowania historii: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetIterationBadgeColor(int iterationCount)
    {
        return iterationCount switch
        {
            1 => "success",
            2 => "warning",
            3 => "danger",
            _ => "secondary"
        };
    }
}

<style>
    .history-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .table-responsive {
        margin-top: 20px;
    }

    .text-truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>
