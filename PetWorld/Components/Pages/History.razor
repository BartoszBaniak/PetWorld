@page "/history"
@using PetWorld.Application.Interfaces
@using PetWorld.Application.DTOs
@using Microsoft.AspNetCore.Components.QuickGrid
@inject IChatHistoryService ChatHistoryService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Historia - PetWorld</PageTitle>

<div class="history-page">
    <div class="history-header">
        <h2>Historia rozm√≥w</h2>
        <p>PrzeglƒÖdaj poprzednie konwersacje z asystentem AI</p>
    </div>

    <div class="history-content">
        @if (isLoading)
        {
            <div class="loading-state">
                <div class="loading-spinner"></div>
                <p>≈Åadowanie historii...</p>
            </div>
        }
        else if (!chatHistories.Any())
        {
            <div class="empty-state">
                <div class="empty-icon">üí¨</div>
                <h3>Brak historii rozm√≥w</h3>
                <p>Rozpocznij swojƒÖ pierwszƒÖ rozmowƒô z asystentem AI</p>
                <button class="start-chat-btn" @onclick="GoToChat">
                    Rozpocznij czat
                </button>
            </div>
        }
        else
        {
            <div class="grid-container">
                <QuickGrid Items="@chatHistories.AsQueryable()" Class="history-grid">
                    <PropertyColumn Property="@(h => h.Timestamp)" Title="Data" Format="dd MMM yyyy, HH:mm" Sortable="true" />
                    <TemplateColumn Title="Pytanie">
                        <span class="cell-text">@TruncateText(context.Question, 100)</span>
                    </TemplateColumn>
                    <TemplateColumn Title="Odpowied≈∫">
                        @if (context.Iterations.Any())
                        {
                            <div class="iterations-container">
                                @foreach (var iteration in context.Iterations)
                                {
                                    <div class="iteration-block">
                                        <div class="iteration-header">
                                            <span class="iteration-number">Iteracja @iteration.IterationNumber</span>
                                            <span class="critic-verdict @(iteration.CriticApproved ? "approved" : "rejected")">
                                                @(iteration.CriticApproved ? "Zaakceptowana" : "Odrzucona")
                                            </span>
                                        </div>
                                        <div class="iteration-writer">
                                            <span class="iteration-label">Writer:</span>
                                            <span class="iteration-text">@TruncateText(iteration.WriterResponse, 200)</span>
                                        </div>
                                        <div class="iteration-critic">
                                            <span class="iteration-label">Critic:</span>
                                            <span class="iteration-text">@iteration.CriticFeedback</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="cell-text">@TruncateText(context.Answer, 150)</span>
                        }
                    </TemplateColumn>
                    <TemplateColumn Title="Liczba iteracji" Sortable="true" SortBy="@(GridSort<ChatHistoryDto>.ByAscending(h => h.IterationCount))">
                        <span class="iteration-badge iteration-@context.IterationCount">
                            @context.IterationCount
                        </span>
                    </TemplateColumn>
                </QuickGrid>
            </div>
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="error-message">
                <span>‚ö†Ô∏è @errorMessage</span>
            </div>
        }
    </div>
</div>

@code {
    private List<ChatHistoryDto> chatHistories = new();
    private bool isLoading = true;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadHistory();
    }

    private async Task LoadHistory()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            var histories = await ChatHistoryService.GetAllHistoryAsync();
            chatHistories = histories.OrderByDescending(h => h.Timestamp).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"B≈ÇƒÖd podczas ≈Çadowania historii: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoToChat()
    {
        NavigationManager.NavigateTo("/chat");
    }

    private string TruncateText(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text) || text.Length <= maxLength)
            return text;
        return text.Substring(0, maxLength) + "...";
    }
}

