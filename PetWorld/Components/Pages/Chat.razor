@page "/chat"
@using PetWorld.Application.Interfaces
@using PetWorld.Application.DTOs
@inject IWriterCriticService WriterCriticService
@inject IChatHistoryService ChatHistoryService
@rendermode InteractiveServer

<PageTitle>Czat z Klientem - PetWorld</PageTitle>

<h3>Czat z Klientem</h3>

<div class="chat-container">
    <div class="chat-input-section">
        <div class="mb-3">
            <label for="questionInput" class="form-label">Pytanie:</label>
            <textarea class="form-control" id="questionInput" rows="3" @bind="currentQuestion" placeholder="Wpisz swoje pytanie o produkty dla zwierząt..."></textarea>
        </div>
        <button class="btn btn-primary" @onclick="SendQuestion" disabled="@isProcessing">
            @if (isProcessing)
            {
                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                <span>Przetwarzanie...</span>
            }
            else
            {
                <span>Wyślij</span>
            }
        </button>
    </div>

    @if (currentResponse != null)
    {
        <div class="response-section mt-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Odpowiedź (Liczba iteracji: @currentResponse.IterationCount)</h5>
                </div>
                <div class="card-body">
                    <p class="card-text" style="white-space: pre-wrap;">@currentResponse.FinalAnswer</p>

                    @if (currentResponse.RecommendedProducts.Any())
                    {
                        <hr />
                        <h6>Polecane produkty:</h6>
                        <ul>
                            @foreach (var product in currentResponse.RecommendedProducts)
                            {
                                <li>@product</li>
                            }
                        </ul>
                    }
                </div>
            </div>

            @if (showIterationDetails)
            {
                <div class="mt-3">
                    <button class="btn btn-sm btn-outline-secondary" @onclick="() => showIterationDetails = false">
                        Ukryj szczegóły iteracji
                    </button>
                    <div class="mt-2">
                        @foreach (var iteration in currentResponse.Iterations)
                        {
                            <div class="card mb-2">
                                <div class="card-header @(iteration.CriticApproved ? "bg-success" : "bg-warning") text-white">
                                    <strong>Iteracja @iteration.IterationNumber</strong> - @(iteration.CriticApproved ? "Zaakceptowano" : "Odrzucono")
                                </div>
                                <div class="card-body">
                                    <p><strong>Odpowiedź Writera:</strong></p>
                                    <p style="white-space: pre-wrap;">@iteration.WriterResponse</p>
                                    @if (!string.IsNullOrEmpty(iteration.CriticFeedback))
                                    {
                                        <p class="mt-2"><strong>Feedback Krytyka:</strong> @iteration.CriticFeedback</p>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="mt-2">
                    <button class="btn btn-sm btn-outline-secondary" @onclick="() => showIterationDetails = true">
                        Pokaż szczegóły iteracji
                    </button>
                </div>
            }
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger mt-3" role="alert">
            @errorMessage
        </div>
    }
</div>

@code {
    private string currentQuestion = string.Empty;
    private WriterCriticResponse? currentResponse;
    private bool isProcessing = false;
    private bool showIterationDetails = false;
    private string errorMessage = string.Empty;

    private async Task SendQuestion()
    {
        if (string.IsNullOrWhiteSpace(currentQuestion))
        {
            errorMessage = "Proszę wpisać pytanie.";
            return;
        }

        isProcessing = true;
        errorMessage = string.Empty;
        currentResponse = null;
        showIterationDetails = false;

        try
        {
            currentResponse = await WriterCriticService.ProcessQuestionAsync(currentQuestion);

            // Save to history
            var chatHistoryDto = new ChatHistoryDto
            {
                Data = DateTime.UtcNow,
                Pytanie = currentQuestion,
                Odpowiedz = currentResponse.FinalAnswer,
                LiczbaIteracji = currentResponse.IterationCount,
                RecommendedProducts = string.Join(", ", currentResponse.RecommendedProducts)
            };

            await ChatHistoryService.SaveChatHistoryAsync(chatHistoryDto);
        }
        catch (Exception ex)
        {
            errorMessage = $"Wystąpił błąd: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }
}

<style>
    .chat-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .chat-input-section {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .response-section {
        animation: fadeIn 0.5s;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }
</style>
